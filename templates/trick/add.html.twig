{% extends 'base.html.twig' %}

{% block title %}Ajoutez un trick{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center">
          <h2>Ajoutez un trick</h2>
        </div>
      </div>
    </section><!-- End Breadcrumbs Section -->


    {% if app.user %} 
      <section class="inner-page">
        <div class="container">
          {{ form_start(addTrickForm) }}
          {{ form_row(addTrickForm.category)}}
            {{ form_row(addTrickForm.name)}}
            {{ form_row(addTrickForm.description)}}
            <div class="text-center my-3 mt-5"><button type="submit">Publier votre figure</button></div>
          {{ form_end(addTrickForm) }}
        </div>
      </section>
    {% else %}
      <section class="inner-page">
        <div class="container">
          <div class="row d-flex justify-content-center">
            <div class="text-center mt-5"><a href="{{ path('app_login') }}">Connectez-vous pour publier un nouveau trick</a></div>
            <div class="text-center mb-5"><a href="{{ path('app_register') }}">Ou enregistrez-vous</a></div>
          </div>
        </div>
      </section>
    {% endif %}

</main>
{% endblock %}
