{% extends 'base.html.twig' %}

{% block title %}Ajoutez un trick{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center">
          <h2>Ajoutez un trick</h2>
        </div>
      </div>
    </section><!-- End Breadcrumbs Section -->


    {% if app.user %} 
      <section class="inner-page">
        <div class="container">
          {{ form_start(addTrickForm) }}
          {{ form_row(addTrickForm.category)}}
            {{ form_row(addTrickForm.name)}}
            {{ form_row(addTrickForm.description)}}
            <div id="medias-container" data-prototype="{{ form_widget(addTrickForm.media.vars.prototype)|e }}">
              {# Affichez les médias existants ici s'ils en ont déjà #}
            </div>
            {{ form_row(addTrickForm.media)}}
            <button type="button" id="add-media">Ajouter un média</button>
            <div class="text-center my-3 mt-5"><button type="submit">Publier votre figure</button></div>
            {{ form_end(addTrickForm) }}
        </div>
      </section>
    {% else %}
      <section class="inner-page">
        <div class="container">
          <div class="row d-flex justify-content-center">
            <div class="text-center mt-5"><a href="{{ path('app_login') }}">Connectez-vous pour publier un nouveau trick</a></div>
            <div class="text-center mb-5"><a href="{{ path('app_register') }}">Ou enregistrez-vous</a></div>
          </div>
        </div>
      </section>
    {% endif %}

</main>
<script>
  var container = document.getElementById('medias-container');
  var addButton = document.getElementById('add-media');

  addButton.addEventListener('click', function() {
    var prototype = container.getAttribute('data-prototype');
    var index = container.children.length;

    var newForm = prototype.replace(/__name__/g, index);
    
    var wrapper = document.createElement('div');
    wrapper.innerHTML = newForm;

    container.appendChild(wrapper.firstChild);
  });
</script>
{% endblock %}

